@using MvcKUTUPHANE.Models.entity
@model List<TBLKITAP>
@{
    ViewBag.Title = "Index"; 
    Layout = "~/Views/Shared/Layout.cshtml";
}


<div style="margin-bottom:15px;margin-top:15px;">
    
    @using (Html.BeginForm("Index", "Kitap", FormMethod.Get))
            {
                <div style="margin-bottom:15px;margin-top:15px;">

                  <b> ARANACAK KİTABI GİRİN</b> @Html.TextBox("p")
                    <input type="submit" value="Ara" /> 
                </div>
            }
 

</div>

<table class="table table-bordered" >



    <tr>

        <th> ID</th>
        <th> KİTAP ADI</th>
        <th> KİTAP YAZARI</th>
        <th> KİTAP KATEGORİSİ</th>
        <th> BASIM YILI</th>
        <th> YAYINEVİ</th>
        <th> SAYFA</th>
        <th> DURUM</th>
        <th> Sil</th>
        <th> Güncelle</th>
    </tr>

    @foreach(var k in Model)
            {
                <tr>
                    <td> @k.ID</td>
                    <td> @k.AD</td>
                    <td> @k.TBLYAZAR.AD&nbsp;@k.TBLYAZAR.SOYAD</td>
                    <td> @k.TBLKATEGORI.AD</td>
                    <td> @k.BASIMYIL</td>
                    <td> @k.YAYINEVI</td>
                    <td> @k.SAYFA</td>
                    <td> @k.DURUM</td>
                    <td> <a href="/Kitap/KitapSil/@k.ID" class="btn btn-danger"> Sil</a></td>
                    <td> <a href="/Kitap/KitapGetir/@k.ID" class="btn btn-success"> Güncelle</a></td>

                </tr>
            }
</table>

<a href="/Kitap/KitapEkle" class="btn btn-primary"> Yeni Kitap Ekle</a>